# Database Configuration
DATABASE_URL=mysql://choirapp:YOUR_PASSWORD@localhost:3306/choir_voice_player

# Application Configuration
NODE_ENV=production
PORT=3000
PYTHON_SERVICE_PORT=8001

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=YOUR_JWT_SECRET_HERE

# OAuth Configuration (if using external OAuth)
# If not using OAuth, you'll need to implement alternative authentication
OAUTH_SERVER_URL=https://your-oauth-server.com
VITE_OAUTH_PORTAL_URL=https://your-oauth-portal.com
VITE_APP_ID=your-app-id
OWNER_OPEN_ID=your-owner-id
OWNER_NAME=Your Name

# S3 Storage Configuration
# You can use AWS S3, Backblaze B2, DigitalOcean Spaces, or any S3-compatible storage
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=choir-voice-player
AWS_ENDPOINT=https://s3.amazonaws.com
# For Backblaze B2: https://s3.us-west-002.backblazeb2.com
# For DigitalOcean Spaces: https://nyc3.digitaloceanspaces.com

# Application Branding
VITE_APP_TITLE=Choir Voice Player
VITE_APP_LOGO=/logo.png

# Optional: Analytics
VITE_ANALYTICS_WEBSITE_ID=
VITE_ANALYTICS_ENDPOINT=

# Domain Configuration
DOMAIN=your-domain.com


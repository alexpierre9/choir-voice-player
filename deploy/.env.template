# ============================================================
# Choir Voice Player — Environment Configuration Template
# Copy to .env and fill in all required values.
# ============================================================

# --- Database ---
# MySQL connection string. Use the database/user created by configure-database.sh.
DATABASE_URL=mysql://choirapp:<SECURE_PASSWORD>@localhost:3306/choir_voice_player

# --- Application ---
NODE_ENV=production
PORT=3000

# --- Auth ---
# JWT signing secret. Generate with: openssl rand -hex 32
JWT_SECRET=

# Single-owner passphrase — the password users enter to access the app.
AUTH_PASSPHRASE=

# Shared secret between the Node server and Python service.
# Generate with: openssl rand -hex 32
# If left blank the Python service will log a warning and skip token verification.
INTERNAL_SERVICE_TOKEN=

# --- MySQL (Docker Compose only) ---
# Only required when running via docker-compose. Not needed for VPS bare-metal.
MYSQL_ROOT_PASSWORD=

# --- AI / Processing ---
# Google Gemini API key used for PDF → MusicXML optical music recognition.
GEMINI_API_KEY=

# --- File Storage ---
# Absolute path on the server where uploaded files are stored.
LOCAL_STORAGE_DIR=/var/lib/choir-files

# Base URL prefix for served files (default: /files).
# PUBLIC_URL_BASE=/files

# --- Python Service ---
# URL the Node server uses to reach the Python service (default: http://localhost:8001).
# PYTHON_SERVICE_URL=http://localhost:8001

# --- Application Branding (optional) ---
VITE_APP_TITLE=Choir Voice Player
VITE_APP_LOGO=/logo.png

# --- Analytics (optional — leave blank to disable) ---
# VITE_ANALYTICS_WEBSITE_ID=
# VITE_ANALYTICS_ENDPOINT=

# --- Domain (used by deploy scripts) ---
DOMAIN=your-domain.com

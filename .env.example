# Local development secrets
# Copy this to .env and fill in the values

# MySQL Database connection string
# Format: mysql://<user>:<password>@<host>:<port>/<dbname>
DATABASE_URL="mysql://root:rootpassword@db:3306/choir_voice_player"

# JSON Web Token secret for signing authentication tokens
# Generate a secure one with: openssl rand -base64 32
JWT_SECRET=""

# Single-owner passphrase for app login
AUTH_PASSPHRASE=""

# MySQL root password used by docker-compose
MYSQL_ROOT_PASSWORD=""

# Shared secret between Node.js and Python service (optional but recommended in production)
# Generate with: openssl rand -hex 32
INTERNAL_SERVICE_TOKEN=""
